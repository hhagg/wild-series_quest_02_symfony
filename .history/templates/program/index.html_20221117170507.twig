{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <a href="{{ path('app_index') }}">
        Back home
    </a>
    <h1>All programs : </h1>
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }} - Cat√©gorie : {{ program.category.name }}</h2>
            <p>{{ program.synopsis }}</p>
            <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
        </div>
    {% else %}
        <strong>program not found.</strong>
    {% endfor %}
    <a href="{{ path('category_index') }}">
        Back to categories
    </a>
    
{% endblock %}